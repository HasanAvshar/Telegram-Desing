                    </StackPanel>
                    <Grid>
                        <Image Source="Images/icon1.png" Width="30" HorizontalAlignment="Right" VerticalAlignment="Top"  Margin="0,0,50,0" />
                        <Image Source="Images/menu1.png" Width="30" HorizontalAlignment="Right" VerticalAlignment="Top" Height="20" Margin="0,0,20,0" />
                        <Image Source="Images/sancaq.png" Width="30" HorizontalAlignment="Left" VerticalAlignment="Bottom"  Margin="10,0,0,10" />
                        <TextBox x:Name="textBox1" FontSize="17" Width="430" HorizontalAlignment="left" VerticalAlignment="Bottom" Height="30" Text="Write a message..." GotFocus="TextBox_GotFocus" Margin="45,0,0,10"/>
                        <Image Source="Images/smile.jpg" Width="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,25,10" />
                        <Image Source="Images/micrafon.png" Width="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,10" Height="50"/>

                    </Grid>
                </Grid>
            </DockPanel>
        </Grid>
    </Grid>
</Window>
